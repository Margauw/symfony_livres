<h1>Liste des livres :</h1>
<ul>
    {% for livre in livres %}
        <li>{{ livre.titre }}</li>
    {% endfor %}
</ul>


<h1> Modification</h1>
<ul>
    {% for livre in livres %}
        <li>
            <a href="{{ path('admin_livre_modif', {'id': livre.id}) }}">{{ livre.titre }}</a>
            <a href="{{ path('admin_livre_supprimer', {'id': livre.id}) }}">Supprimer</a>

        </li>
    {% endfor %}
</ul>

